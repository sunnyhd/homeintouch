script(id="dashboard-floor", type="text/template")
  .row-fluid
    .span6.room-device-group.clearfix
      .hit-widget.clearfix.scrollable-x#my-rooms
        .hit-title My Rooms
        .hit-icon-container.viewport
          <% if(rooms.length == 0) { %>
          .overview
          div.alert.alert-info
            span There are no rooms in this floor.
          <% } else { %>
          .overview
            <% _.each(rooms, function(room){ %>
            .hit-icon.room-item-list(data-item-id!="<%= room.id %>", data-hit-icon-type!="<%= room.icon %>", data-touchable="black")
              span <%= room.name %>
            <% }) %>
          <% } %>
        .scrollbar
          .track
            .thumb
              .end

