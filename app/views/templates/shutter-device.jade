script(id="device-list-shutter-item-template", type="text/template")
  .hit-icon.device-widget(data-widget-type="shutter", data-hit-icon-type="devices.shutterOpen0")
    span.device-name <%= name %>
    .slider-vertical(data-sliding="false")
    .widget-opts
      .shutter-detail 0% 
      ul.device-btn-group.three.clearfix
        li.device-btn
          a.blue(href="#", data-value="up")
            i.icon-chevron-up.icon-white
        li.device-btn
          a.blue(href="#", data-value="stop")
            i.icon-stop.icon-white
        li.device-btn
          a.blue(href="#", data-value="down")
            i.icon-chevron-down.icon-white

script(id="device-add-shutter-template", type="text/template")
  .modal-header
    h2 <%= formTitle %>
  .modal-body
    form.form-horizontal
      .control-group
        label(for="name").control-label Name
        .controls
          input(id="name", type="text", placeHolder="Fireplace", value!="<%= getValue('name') %>")
      .control-group
        label(for="isFavorite").control-label Favorite
        .controls
          <% if (isChecked('isFavorite')) { %>
          input(id="isFavorite", type="checkbox", checked="checked")
          <% } else { %>
          input(id="isFavorite", type="checkbox")
          <% } %>
      .control-group
        label(for="read_position").control-label Read Position Address
        .controls
          select(id="read_position", type="text", placeHolder="#/#/#")
            <% _.each(etsData, function(ets) { %>
            <% if(ets.address === getAddressValue('read_position')) { %>
            option(value!="<%= ets.address %>", selected="selected") <%= ets.address + ' - ' + ets.room + ' - ' + ets.widget  %>
            <% } else {%>
            option(value!="<%= ets.address %>") <%= ets.address + ' - ' + ets.room + ' - ' + ets.widget %>
            <% } %>
            <% }); %>
      .control-group
        label(for="write_stop").control-label Write Stop Address
        .controls
          select(id="write_stop", type="text", placeHolder="#/#/#")
            <% _.each(etsData, function(ets) { %>
            <% if(ets.address === getAddressValue('write_stop')) { %>
            option(value!="<%= ets.address %>", selected="selected") <%= ets.address + ' - ' + ets.room + ' - ' + ets.widget  %>
            <% } else {%>
            option(value!="<%= ets.address %>") <%= ets.address + ' - ' + ets.room + ' - ' + ets.widget %>
            <% } %>
            <% }); %>
      .control-group
        label(for="write_switch").control-label Write Switch Address
        .controls
          select(id="write_switch", type="text", placeHolder="#/#/#", value!="<%= getAddressValue('write_switch') %>")
            <% _.each(etsData, function(ets) { %>
            <% if(ets.address === getAddressValue('write_switch')) { %>
            option(value!="<%= ets.address %>", selected="selected") <%= ets.address + ' - ' + ets.room + ' - ' + ets.widget  %>
            <% } else {%>
            option(value!="<%= ets.address %>") <%= ets.address + ' - ' + ets.room + ' - ' + ets.widget %>
            <% } %>
            <% }); %>
      .control-group
        label(for="write_position").control-label Write Position Address
        .controls
          select(id="write_position", type="text", placeHolder="#/#/#", value!="<%= getAddressValue('write_position') %>")
            <% _.each(etsData, function(ets) { %>
            <% if(ets.address === getAddressValue('write_position')) { %>
            option(value!="<%= ets.address %>", selected="selected") <%= ets.address + ' - ' + ets.room + ' - ' + ets.widget  %>
            <% } else {%>
            option(value!="<%= ets.address %>") <%= ets.address + ' - ' + ets.room + ' - ' + ets.widget %>
            <% } %>
            <% }); %>
      .control-group
        label(for="max_value").control-label Max Value
        .controls
          input(id="max_value", type="number", placeHolder="100", min="0", max="100", value!="<%= getValue('max_value') %>")
      .control-group
        label(for="min_value").control-label Min Value
        .controls
          input(id="min_value", type="number", placeHolder="0", min="0", max="100", value!="<%= getValue('min_value') %>")
  .modal-footer
    a(href="#").cancel.btn Cancel
    a(href="#").add.btn.btn-primary <%= primaryBtnText %>

script(id="device-view-shutter-template", type="text/template")
  .modal-header
    h2 <%= name %>
  .modal-body
    .row
      .span2
        label(for="name").pull-right Name
      .span3
        <%= name %>
    .row
      .span2
        label(for="isFavorite").pull-right Favorite
      .span3
        <%= isCheckedFriendly('isFavorite') %>
    .row
      .span2
        label(for="read_position").pull-right Read Position Address
      .span3
        <%= getAddress('read_position').address %>
    .row
      .span2
        label(for="write_stop").pull-right Write Stop Address
      .span3
        <%= getAddress('write_stop').address %>
    .row
      .span2
        label(for="write_switch").pull-right Write Switch Address
      .span3
        <%= getAddress('write_switch').address %>
    .row
      .span2
        label(for="write_position").pull-right Write Position Address
      .span3
        <%= getAddress('write_position').address %>
    .row
      .span2
        label(for="min_value").pull-right Min Value
      .span3
        <%= min_value %>
    .row 
      .span2
        label(for="max_value").pull-right Max Value
      .span3
        <%= max_value %>
  .modal-footer
    a(href="#").delete.btn.pull-left
      i.icon-trash 
      \ Delete
    a(href="#").edit.btn.pull-left
      i.icon-edit
      \ Edit
    a(href="#").cancel.btn.btn-primary Close
