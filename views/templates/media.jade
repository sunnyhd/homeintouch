script(id="players-layout-template", type="text/template")
  .container-fluid
    .row-fluid
      .span12
        h3 Players

    .row-fluid
      .span12
        ul.players.nav.nav-tabs

script(id="players-item-template", type="text/template")
  a(href='#') <%= title %>

script(id="player-template", type="text/template")
  <%= item.label %>
  br
  <%= currentTime %> / <%= totalTime %>
  br
  a.stop(href="#") Stop
  <% if (playing) { %>
  a.pause(href="#") Pause
  <% } else { %>
  a.pause(href="#") Play
  <% } %>

