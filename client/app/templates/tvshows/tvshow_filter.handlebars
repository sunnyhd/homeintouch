<div class="span12 movies-header">
    <div class="input-append movies-header-option">
      <input class="span2" type="text" name="search" value="{{ term }}" placeholder="Search series...">
      <div class="btn-group">
        <button class="btn clear" href="#"><i class="icon-remove"></i></button>
        <button class="btn search" href="#"><i class="icon-search"></i></button>
        <button id="current-filter" class="btn dropdown-toggle" data-toggle="dropdown"><span id="filter-name">All Series</span> <span class="caret"></span></button>
        <ul class="dropdown-menu">
          <li><a data-filter="all" href="#">All Series</a></li>
          <li><a data-filter="unwatched" href="#">Unwatched</a></li>
        </ul>
      </div><!-- /btn-group -->
    </div>
    <div class="pull-right">
      <div class="btn-group">
        <a href="#" id="genre-filter" class="btn">Genre: All</a>
        <a href="#" class="btn dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
        <ul id="tvshow-genre-list" class="dropdown-menu"></ul>
      </div>
    </div>
</div>