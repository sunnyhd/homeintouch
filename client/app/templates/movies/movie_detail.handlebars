<div class="visible-desktop">
    <div class="m-header">
        <h2>{{ label }}</h2>
    </div>
    <div class="m-data">
        <div class="m-img-container">
            {{#if thumbnail}}
                <img src="{{ thumbnail }}" class="cover pull-left">
            {{else}}
                <img src="img/svg/media/defaultMovie.svg" class="cover pull-left no-img">
            {{/if}}
        </div>
        <div class="m-data-container">
            <div class="m-rating">
                <div class="m-rating-title">RATING</div>
                <div class="m-rating-value">{{ toFixed rating 1 }}</div>
            </div>
            <ul>
                <li><strong>Year:</strong> {{ year }}</li>
                <li><strong>Genre:</strong> {{ genre }}</li>
                <li><strong>Duration:</strong> {{ runtime }} minutes</li>
                <li><strong>Director:</strong> {{ director }}</li>
                <li><strong>Studio:</strong> {{ studio }}</li>
                <li><strong>Parental Rating:</strong> {{ mpaa }}</li>
                <li class="plot-container"><p class="plot"><strong>Plot:</strong> {{ plot }}</p></li>
            </ul>
        </div>
    </div>
    <div class="m-actions">
        <div>
            <a class="btn btn-success btn-block" href="#"><i class="icon-play icon-white"></i>&nbsp;Play Movie</a>
            <a class="btn btn-primary btn-block" href="#"><i class="icon-time icon-white"></i>&nbsp;Add to Playlist</a>

            <!-- {{#if resume}}
                <a class="btn">Resume ({{ resumeTime }})</a>
            {{/if}}

            {{#if trailer}}
            <div class="btn-group">
                <button class="btn">Play Trailer</button>
                <button class="btn">Watch Trailer</button>
            </div>
            {{/if}}
            <a class="btn" href="#">IMDB</a> -->
        </div>
    </div>
</div>

