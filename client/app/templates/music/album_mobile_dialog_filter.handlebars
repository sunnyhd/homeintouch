<div class="modal-header">
    <a class="close" href="#">x</a>
    <h2>Filter Albums</h2>
</div>

<div class="modal-body content-centered">
	<form>
		<select class="genres-filter">
  			{{#genres}}
			  <option>{{.}}</option>
			{{/genres}}
		</select>
		<select class="years-filter">
  			{{#years}}
			  <option>{{.}}</option>
			{{/years}}
		</select>
	</form>
</div>

<div class="modal-footer">
	<button class="btn btn-primary filter">Filter</button>
</div>